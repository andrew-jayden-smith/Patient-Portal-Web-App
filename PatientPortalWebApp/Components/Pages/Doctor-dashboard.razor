@page "/doctor-dashboard/{DoctorId}"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Portal</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Taskbar -->
    <nav class="navbar navbar-dark bg-success">
        <span class="navbar-brand mb-0 h1">Medical Portal</span>
        <span class="navbar-text">Doctor: <span>@Doctor?.FirstName</span> <span>@Doctor?.LastName</span></span>
        <a href="/" class="btn btn-outline-light ml-2">Log Out</a>
    </nav>

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="dashboard1-tab" data-toggle="tab" href="#dashboard1" role="tab" aria-controls="dashboard1" aria-selected="true">Home</a>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="dashboard1" role="tabpanel" aria-labelledby="dashboard1-tab">
            <div class="container-fluid mt-3">
                <div class="row">
                    <!-- Account Information -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-success text-white">Account Information</div>
                            <div class="card-body">
                                <ul class="list-group">
                                    <li class="list-group-item"><strong>Doctor Id:</strong> @Doctor?.Id</li>
                                    <li class="list-group-item"><strong>First Name:</strong> @Doctor?.FirstName</li>
                                    <li class="list-group-item"><strong>Last Name:</strong> @Doctor?.LastName</li>
                                    <li class="list-group-item"><strong>Email:</strong> @Doctor?.Email</li>
                                    <li class="list-group-item"><strong>Phone Number:</strong> @Doctor?.PhoneNumber</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Current Patients -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-success text-white">Current Patients</div>
                            <div class="card-body">
                                <ul class="list-group">
                                    @if (_patients != null)
                                    {
                                        foreach (var user in _patients )
                                        {
                                            <li class="list-group-item">@($"{user.FirstName} {user.LastName} - {user.Id}")</li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="list-group-item">No patients found</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Additional Dashboard Tabs -->
        <!-- You can add more tabs if needed -->
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>


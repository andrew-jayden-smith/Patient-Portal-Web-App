@page "/admin-dashboard/{adminId}"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Portal</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <!-- Taskbar -->
    <div class="p-2 d-flex justify-content-between align-items-center" style="background-color: #45a049; color: white;">
        <h1 class="text-center m-0" style="font-size: 24px;">Medical Portal</h1>
        <div>
            Patient: <span>@Admin?.FirstName</span> <span>@Admin?.LastName</span>
            <a href="/" class="btn btn-outline-light ml-2">Log Out</a>
        </div>
    </div>



    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="dashboard1-tab" data-toggle="tab" role="tab" aria-controls="dashboard1" aria-selected="true">Home</a>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="dashboard1" role="tabpanel" aria-labelledby="dashboard1-tab">
            <div class="container-fluid mt-3">
                <!-- Content for Dashboard 1 -->
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <ul>
                                    <li style="font-size: 20px"><strong>Account Information</strong></li>
                                    <h1></h1>
                                    <li><strong>Admin Id:</strong> @Admin?.Id</li>
                                    <li><strong>First Name:</strong> @Admin?.FirstName</li>
                                    <li><strong>Last Name:</strong> @Admin?.LastName</li>
                                    <li><strong>Email:</strong> @Admin?.Email</li>
                                    <li><strong>Phone Number:</strong> @Admin?.PhoneNumber</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <ul>
                                    <li style="font-size: 20px"><strong>Current Patients</strong></li>
                                    <h1></h1>
                                    @if (_patients != null)
                                    {
                                        foreach (var user in _patients)
                                        {
                                            <li>@($"{user.FirstName} {user.LastName} - {user.Id}")</li>
                                        }
                                    }
                                    else
                                    {
                                        <li>No patients found</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <ul>
                                    <li style="font-size: 20px"><strong>Current Appointment Requests</strong></li>
                                    <h1></h1>
                                    @if (_bookings != null)
                                    {
                                        @foreach (var bookings in _bookings)
                                        {
                                            <li>
                                                @($"Id: {bookings.BookingId} Date: {bookings.AppointmentDate} Time: {bookings.AppointmentTime} Doctor Id: {bookings.DoctorId}")
                                            </li>
                                        }
                                    } 
                                    else
                                    {
                                       <li> No Current Appointments</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <ul>
                            <li style="font-size: 20px"><strong>Current Doctors</strong></li>
                            <h1></h1>
                            @foreach (var doctors in _doctors)
                            {
                                <li>
                                    @($"{doctors.FirstName} {doctors.LastName} - {doctors.Id}")
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

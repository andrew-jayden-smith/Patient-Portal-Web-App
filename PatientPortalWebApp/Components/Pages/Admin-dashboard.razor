@page "/admin-dashboard/{adminId}"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Portal</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Taskbar -->
    <nav class="navbar navbar-dark bg-success">
        <span class="navbar-brand mb-0 h1">Medical Portal</span>
        <span class="navbar-text">Admin: <span>@Admin?.FirstName</span> <span>@Admin?.LastName</span></span>
        <a href="/" class="btn btn-outline-light ml-2">Log Out</a>
    </nav>

    <!-- Content -->
    <div class="container-fluid mt-3">
        <div class="row">
            <!-- Account Information -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">Account Information</div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Admin Id:</strong> @Admin?.Id</li>
                            <li class="list-group-item"><strong>First Name:</strong> @Admin?.FirstName</li>
                            <li class="list-group-item"><strong>Last Name:</strong> @Admin?.LastName</li>
                            <li class="list-group-item"><strong>Email:</strong> @Admin?.Email</li>
                            <li class="list-group-item"><strong>Phone Number:</strong> @Admin?.PhoneNumber</li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Current Patients -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">Current Patients</div>
                    <div class="card-body">
                        <ul class="list-group">
                            @if (_patients != null)
                            {
                                foreach (var user in _patients)
                                {
                                    <li class="list-group-item">@($"{user.FirstName} {user.LastName} - {user.Id}")</li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item">No patients found</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Current Doctors -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">Current Doctors</div>
                    <div class="card-body">
                        <ul class="list-group">
                            @foreach (var doctor in _doctors)
                            {
                                <li class="list-group-item">@($"{doctor.FirstName} {doctor.LastName} - {doctor.Id}")</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Current Appointment Requests -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">Current Appointment Requests</div>
                    <div class="card-body">
                        <ul class="list-group">
                            @if (_bookings != null)
                            {
                                @foreach (var booking in _bookings)
                                {
                                    <li class="list-group-item">
                                        @($"Id: {booking.BookingId} | Date: {booking.AppointmentDate} | Time: {booking.AppointmentTime} | Doctor Id: {booking.DoctorId}")
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item">No Current Appointments</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>


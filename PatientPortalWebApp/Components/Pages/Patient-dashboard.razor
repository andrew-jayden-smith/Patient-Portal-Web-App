@page "/patient-dashboard/{PatientId}"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Portal</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <!-- Taskbar -->
<div class="bg-dark text-white p-2 d-flex justify-content-between align-items-center">
    <h1 class="text-center m-0" style="font-size: 24px;">Medical Portal</h1>
    <div>
        Patient: <span>@Patient?.FirstName</span> <span>@Patient?.LastName</span>
        <a href="/" class="btn btn-outline-light ml-2">Log Out</a>
    </div>
</div>




    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="dashboard1-tab" data-toggle="tab" role="tab" aria-controls="dashboard1" aria-selected="true">Home</a>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="dashboard1" role="tabpanel" aria-labelledby="dashboard1-tab">
            <div class="container-fluid mt-3">
                <!-- Content for Dashboard 1 -->
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <ul>
                                    <li style="font-size: 20px"><strong>Account Information</strong></li>
                                    <h1></h1>
                                    <li><strong>Patient Id:</strong> @Patient?.Id</li>
                                    <li><strong>First Name:</strong> @Patient?.FirstName</li>
                                    <li><strong>Last Name:</strong> @Patient?.LastName</li>
                                    <li><strong>Email:</strong> @Patient?.Email</li>
                                    <li><strong>Phone Number:</strong> @Patient?.PhoneNumber</li>
                                    <li><strong>Address:</strong> @Patient?.Address</li>
                                    <li><strong>Height:</strong> @Patient?.Height</li>
                                    <li><strong>Weight:</strong> @Patient?.Weight</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <ul>
                                    <li style="font-size: 20px"><strong>Prescription</strong></li>
                                    <h1></h1>
                                    <li><strong>Current:</strong> @Patient?.Prescription</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="dashboard2" role="tabpanel" aria-labelledby="dashboard2-tab">
            <!-- Content for Dashboard 2 -->
            <!-- Containers removed -->
        </div>
        <div class="tab-pane fade" id="dashboard3" role="tabpanel" aria-labelledby="dashboard3-tab">
            <!-- Content for Dashboard 3 -->
            <!-- Containers removed -->
        </div>
    </div>
</body>
</html>
